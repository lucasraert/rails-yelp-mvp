<div class="container">
  <div class="center">
    <h1>Vegan restaurants 🌿</h1>
    <ul class="list-unstyled">
      <% @restaurants.each do |resto| %>
        <div class="card">
        <li>
        <% if resto.category == "french" %>
            🇫🇷
            <% elsif resto.category == "belgian" %>
            🇧🇪
            <% elsif resto.category == "italian" %>
            🇮🇹
            <% elsif resto.category == "japanese" %>
            🇯🇵
            <% end %>
          <strong><%=link_to resto.name, restaurant_path(resto)%></strong>
        </li>
        <li><p>📍 <%= resto.address %></p></li>
        <li><p>📞 <%= resto.phone_number %></p></li>
        <li>
        <%= link_to "Add review", new_restaurant_review_path(resto), class: "button" %>
        </li>
        <hr>
        </div>
      <% end %>
    </ul>
  </div>
</div>

